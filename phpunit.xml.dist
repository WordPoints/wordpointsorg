<phpunit
	bootstrap="dev-lib/phpunit/module-bootstrap.php"
	backupGlobals="false"
	colors="true"
	>
	<testsuites>
		<testsuite>
			<directory suffix=".php">tests/phpunit/tests/</directory>
		</testsuite>
	</testsuites>
	<groups>
		<exclude>
			<group>uninstall</group>
		</exclude>
	</groups>
</phpunit>
